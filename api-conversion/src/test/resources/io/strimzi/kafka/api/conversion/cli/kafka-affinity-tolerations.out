---
apiVersion: kafka.strimzi.io/v1beta2
kind: Kafka
metadata:
  name: my-cluster
spec:
  kafka:
    version: 2.7.0
    replicas: 3
    listeners:
    - name: plain
      port: 9092
      type: internal
      tls: false
    - name: tls
      port: 9093
      type: internal
      tls: true
    config:
      offsets.topic.replication.factor: 3
      transaction.state.log.replication.factor: 3
      transaction.state.log.min.isr: 2
      log.message.format.version: 2.7
      inter.broker.protocol.version: 2.7
    storage:
      volumes:
      - type: persistent-claim
        size: 100Gi
        id: 0
      type: jbod
    template:
      pod:
        affinity:
          nodeAffinity:
            requiredDuringSchedulingIgnoredDuringExecution:
              nodeSelectorTerms:
              - matchExpressions:
                - key: dedicated
                  operator: In
                  values:
                  - Kafka
        tolerations:
        - effect: NoSchedule
          key: dedicated
          operator: Equal
          value: Kafka
  zookeeper:
    replicas: 3
    storage:
      type: persistent-claim
      size: 100Gi
    template:
      pod:
        affinity:
          nodeAffinity:
            requiredDuringSchedulingIgnoredDuringExecution:
              nodeSelectorTerms:
              - matchExpressions:
                - key: dedicated
                  operator: In
                  values:
                  - Kafka
        tolerations:
        - effect: NoSchedule
          key: dedicated
          operator: Equal
          value: Kafka
  entityOperator:
    topicOperator: {}
    userOperator: {}
    template:
      pod:
        tolerations:
        - effect: NoSchedule
          key: dedicated
          operator: Equal
          value: Kafka
        affinity:
          nodeAffinity:
            requiredDuringSchedulingIgnoredDuringExecution:
              nodeSelectorTerms:
              - matchExpressions:
                - key: dedicated
                  operator: In
                  values:
                  - Kafka